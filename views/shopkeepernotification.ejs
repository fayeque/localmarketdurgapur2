	<div class="row">
		<h1>Notifications</h1>
		<br>
		<br>
		<!-- <p>---------------------------------------------------------------------</p> -->
		<% notification.forEach(function(notification){ %> 
			<div class="column">
				
				<p><%= notification.username %></p>
				<p> <%= notification.prname %>  </p>
				<p> <%= notification.prprice %>  </p>
				<form action="/user/<%= notification.userid %>/<%= notification._id %>/<%= id %>" method="POST" style="width: 50%" enctype="multipart/form-data" >
					<input type="number" name="prprice" placeholder="Enter your price">
					<input type="number" name="stock" placeholder="Enter the quantity in stock">
					<!-- <input type="" name="prprice" placeholder="enter your price"> -->
					<input type="text" name="description" placeholder="Offers">
						 <div class="form-group">
    <!-- <label for="exampleInputEmail1"> </label> -->
		 <select name="selectpicker" required>
			 <option value="" name="0">Select policy</option>
			 <option value="refundable" name="refundable">Is refundable?</option>
			  <option value="replaceable" name="replaceable">Is replaceable</option>
			  <option value="refundreplaceable" name="refundreplaceable">Is refundable and replaceable both?</option>
			  <option value="none" name="none">None</option>
				</select>
				
					</div>
					<button class="btn btn-success">submit</button>
                    </form>
					<a href="/shopkeeper/<%= id %>/<%= notification._id %>" class="btn btn-danger">Cancel</a>
                    <a href="<%= notification.url %>">Click here to get more info about the product</a>
                <a href="/report/<%= notification.userid %>/<%= notification._id %>" class="btn btn-danger">Report</a>
				
		<p>------------------------------------------------------------</p>		
		</div>
		
		<% }) %>

