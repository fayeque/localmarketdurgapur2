                <% var min=moment.utc(ms).format("mm"); %>
            <% if(hours >=0 && hours<=72) {%>

            <% if(orders.purchasedproducts[i].returnedseen == "not known" && orders.purchasedproducts[i].replacedseen == "not known"){ %>
                <% if(orders.purchasedproducts[i].policy=="refundable"){ %>
                <a href="/return/<%= orders.purchasedproducts[i]._id %>" class="du" style="background-color:red">Return</a>&nbsp;&nbsp;
                <% } %>
                <% if(orders.purchasedproducts[i].policy=="replaceable"){ %>
                <a href="/replace/<%= orders.purchasedproducts[i]._id %>" class="du" style="background-color:orange">Replace</a>&nbsp;&nbsp;
                <% } %>
                <% if(orders.purchasedproducts[i].policy=="refundreplaceable"){ %>
                <a href="/return/<%= orders.purchasedproducts[i]._id %>" class="du" style="background-color:red">Return</a>&nbsp;&nbsp;
                <a href="/replace/<%= orders.purchasedproducts[i]._id %>" class="du" style="background-color:orange">Replace</a>&nbsp;&nbsp;
