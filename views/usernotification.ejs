    <body>
		   	<nav >
        <div class="logo">
            <img src="https://res.cloudinary.com/dwvx9infb/image/upload/v1580412910/dxsk9zdfbun6vxdph25h.jpg">
        </div>
        <ul>
            <li><a href="/">home</a></li>
	<li><a href="/usernotification"  class="active">Notifications<span class="badge"><%= notification.length %></span></a></li>
            <div class="hideit">
				<li><a href="/logout">Logout</a></li></div>
        </ul>
    </nav>
		    <div style="margin-top:9%;" class="container">
		<% if(success && success.length>0){ %> 
		<div class="alert alert-success" role="alert">
   <%= success %>
		</div>
		<% } %> 
		<% if(error && error.length>0){ %> 
		<div class="alert alert-danger" role="alert">
			<%= error %>
</div>
				<% } %>
		</div>
		<div class="row">
			<h1 style="margin-left:60px;">All notifications </h1>
			    <a href="/pastnotification"><h4 style="color:#3333ff;">View past notifications</h4></a>
      <br>
				<!-- <div class="mobip">
					<p>
					-----------------------------------------------------------------------------------------
			</p>
			</div> -->
			      <% if(notification.length==0){ %>
        <div class="uhno container">

          <h2 class="oops" style="margin-top:20px;">
             Oops!!! No new notifications.
          </h2>
          <!-- <h4 class="oopsmob" style="margin-top:20px;margin-left:10px;">
             Oops!!! No new notifications.
          </h4>
   -->
          
      </div>
       <% } %> 
		<% notification.forEach(function(notification){ %>
				<div class="box container">
				<p class="p1"> <%= notification.prname %> </p>
				<p class="p1"> <%= notification.pprice %> </p>
				<p> <%= notification.stock %> (in stock) </p>
				<p> Shopkeeper name: <%= notification.shopkeepername %>  </p>
				<p> Additional information: <%= notification.description %>  </p>
					<div style="display:flex;justify-content:space-around">
			<% for(let j=0;j<notification.imageUrl.length;j++){ %>
			
		<a href="<%= notification.imageUrl[j] %>" target="new"><img style="width:120px;height:150px;" src="<%= notification.imageUrl[j] %>" alt="produvt image"></a>
														   
				<%	} %>
</div>
				<% if(notification.policy == "refundable"){ %>
				<p style="color:green;">
				Return policy is available. &nbsp;&nbsp;
				</p>
				<% } %> 
				<% if(notification.policy == "replaceable"){ %>
				<p style="color:orange;">
					Replacement policy is available. &nbsp;&nbsp; 
				</p>
				<% } %>
				<% if(notification.policy == "refundreplaceable") { %> 
					<p style="color:green;">
					Replacement and returnable policy are available. &nbsp;&nbsp; 
				</p>
				<% } %>
				<% if(notification.policy == "none") { %> 
					<p style="color:red;">
					Replacement and returnable policy are not available. &nbsp;&nbsp;
				</p>
				<% } %>
				 <% if(notification.stock == 0){ %> 
				<p style="color: black">Product is out of stock.</p>
				<% }else{%>
				<a href="/buyproduct/<%= notification._id %>" style="margin-top:7px;border-radius:25px;background-color:green;" class="du">Proceed to buy</a>
				 <% } %>
					<br>
					
<div style="margin-top:10px;">
	
					
					<% if(notification.overallrating==0) {%>
						<p >
							No rating yet
					</p>
					<% }else{%>
						<% if(notification.overallrating>3){ %>
	<span> Current shopkeeper rating: <strong style="color:green;" ><%= notification.overallrating.toFixed(1) %></strong><span class="fa fa-star checked"></span> <i class="fa fa-user" aria-hidden="true"></i> (<%= notification.ratingcount %>)</span>
						<% }else{ %>
							<span> Current shopkeeper rating: <strong style="color:red;" ><%= notification.overallrating.toFixed(1) %> </strong> <span class="fa fa-star checked"></span> <i class="fa fa-user" aria-hidden="true"></i>(<%= notification.ratingcount %>)</span>
						<% } %>
					<% } %>
	</div>
					<!-- <p>---------------------------------------------------------------------</p> -->
				</div>
		<% }) %>
		</div>
